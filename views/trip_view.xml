<odoo>
    <record id="view_trip_tree" model="ir.ui.view">
        <field name="name">trip.trip.tree</field>
        <field name="model">trip.trip</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="driver_id"/>
                <field name="license_plate"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_trip_form" model="ir.ui.view">
        <field name="name">trip.trip.form</field>
        <field name="model">trip.trip</field>
        <field name="arch" type="xml">
            <form>
                <header>

                    <button name="%(trip_management.action_trip_wizard)d" string="Update Odometer" type="action" class="oe_highlight" 
                        invisible="state != 'draft'"/>

                    <button name="%(trip_management.action_report_trip)d" string="Print Report" type="action" class="btn-primary"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="operation_type_ids" widget="many2many_tags"/>
                        <field name="picking_ids" widget="many2many_tags"/>
                        <field name="license_plate"/>
                        <field name="vehicle_model"/>
                        <field name="driver_id"/>
                        <field name="odometer_start"/>
                        <field name="odometer_end"/>
                        <field name="attachment"/>
                        <field name="weight_capacity"/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button name="action_confirm_trip" string="Confirm Trip" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
